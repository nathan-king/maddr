{
  "name": "maddr",
  "version": "1.1.0",
  "description": "Semantic markdown parser with section and field syntax",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "pnpm tsx src/index.ts",
    "dev": "pnpm tsx watch src/index.ts",
    "demo": "pnpm tsx src/demo.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "parser",
    "semantic",
    "content",
    "remark"
  ],
  "author": "Nathan King",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/useMaddr.d.ts",
      "import": "./dist/react/useMaddr.js"
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.8",
    "@types/react": "^19.2.8",
    "react": "^19.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "remark": "^15.0.1",
    "remark-html": "^16.0.1",
    "strip-markdown": "^6.0.0"
  },
  "peerDependencies": {
    "react": "^19.2.3"
  }
}
